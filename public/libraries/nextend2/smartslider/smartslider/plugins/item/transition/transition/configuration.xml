<root>
  <params name="transition" label="Transition settings" hidetitle="1">
    <param name="animation" type="list" label="Animation" default="Fade" translateable="1">
      <option value="Fade">Fade</option>
      <option value="VerticalFlip">Vertical flip</option>
      <option value="HorizontalFlip">Horizontal flip</option>
    </param>
    <param name="image" type="image" label="Image" default="" fixed="1" style="width: 144px;"/>
    <param name="image2" type="image" label="Image" default="" fixed="1" style="width: 144px;"/>
    <param name="alt" type="text" label="Alt" default="Alternative text for image" class="n2-expert"/>
    <param name="link" type="mixed" label="Link" default="|*|_self">
      <param type="url" label="Link" style="width:140px;"/>
      <param type="list" label="Target" translateable="1">
        <option value="_self">Self</option>
        <option value="_blank">Blank</option>
      </param>
    </param>
    <param name="onmouseenter" type="text" label="Event on mouseenter" class="n2-expert" default="" doc="#Developer-Javascript-events"/>
    <param name="onmouseclick" type="text" label="Event on mouseclick" class="n2-expert" default="" doc="#Developer-Javascript-events"/>
    <param name="onmouseleave" type="text" label="Event on mouseleave" class="n2-expert" default="" doc="#Developer-Javascript-events"/>
  </params>
</root>