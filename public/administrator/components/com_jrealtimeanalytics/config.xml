   		<field type="spacer" class="label label-info spacer" label="COM_JREALTIME_EXCLUSIONS_BY_IPADDRESS"/>
   		<field name="ipaddress" type="ipaddress" validate="ipaddress" hint="xxx.xxx.xxx.xxx" size="10" default="" label="COM_JREALTIME_IPADDRESS" description="COM_JREALTIME_IPADDRESS_DESC" /> 
   		
   		<field type="spacer" class="label label-info spacer" label="COM_JREALTIME_EXCLUSIONS_BY_IPRANGE"/>
