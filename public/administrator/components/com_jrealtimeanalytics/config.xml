		<field name="realtime_stats" class="btn-group" type="radio" default="0" label="COM_JREALTIME_LOAD_REALTIME_STATS" description="COM_JREALTIME_LOAD_REALTIME_STATS_DESC">
   			<option value="0">JNO</option>              
   			<option value="1">JYES</option>
   		</field>
	</fieldset>
	
