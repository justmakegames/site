		<field type="spacer" class="label label-info spacer" label="COM_JREALTIME_SYSTEMSTATUS"/>
		<field name="gcenabled" class="btn-group" type="radio" default="1" label="COM_JREALTIME_GARBAGEONOFF" description="COM_JREALTIME_GARBAGEONOFF_DESC">
   			<option value="0">JNO</option>              
   			<option value="1">JYES</option>
   		</field>
   		<field name="probability" type="list" size="1" default="20" label="COM_JREALTIME_GARBAGEPROB" description="COM_JREALTIME_GARBAGEPROB_DESC" >
   			<option value="50">COM_JREALTIME_GARBAGEPROB_HIGHEST</option> 
   			<option value="30">COM_JREALTIME_GARBAGEPROB_HIGH</option>
   			<option value="20">COM_JREALTIME_GARBAGEPROB_MEDIUM</option>
   			<option value="5">COM_JREALTIME_GARBAGEPROB_LOW</option>
