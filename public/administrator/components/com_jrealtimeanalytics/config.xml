   		<field name="iprange_end" type="ipaddress" validate="ipaddress" hint="xxx.xxx.xxx.xxx" size="10" default="" label="COM_JREALTIME_IPRANGE_END" description="COM_JREALTIME_IPRANGE_END_DESC" /> 
		<field name="iprange_multiple" type="textarea" hint="xxx.xxx.xxx.xxx-xxx.xxx.xxx.xxx" default="" rows="5" label="COM_JREALTIME_IPRANGE_MULTIPLE" description="COM_JREALTIME_IPRANGE_MULTIPLE_DESC" />

