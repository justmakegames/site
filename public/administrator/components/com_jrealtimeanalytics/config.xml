		<field type="spacer" class="label label-info spacer" label="COM_JREALTIME_REPORT_BYEMAIL_SETTINGS"/>
		<field name="report_mailfrom" type="text" size="80" default="" label="COM_JREALTIME_REPORT_MAILFROM" description="COM_JREALTIME_REPORT_MAILFROM_DESC"/>
		<field name="report_fromname" type="text" size="80" default="" label="COM_JREALTIME_REPORT_FROMNAME" description="COM_JREALTIME_REPORT_FROMNAME_DESC"/>
		<field name="report_byemail" class="btn-group" type="radio" default="0" label="COM_JREALTIME_REPORT_BYEMAIL" description="COM_JREALTIME_REPORT_BYEMAIL_DESC">
   			<option value="0">JNO</option>   
   			<option value="1">JYES</option>            
   		</field>
