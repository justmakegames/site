<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="community" method="upgrade">

	<name>Quick2cart - Community - My Products</name>

	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-13 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<creationDate>02 Oct 2015</creationDate>
	<version>2.4.1</version>

	<isapplication>true</isapplication>

	<description>PLG_COMMUNITY_QUICK2CARTPRODUCT_XML_DESCRIPTION</description>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_community_quick2cartproduct.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_community_quick2cartproduct.sys.ini</language>
	</languages>

	<files>
		<file plugin="quick2cartproduct">quick2cartproduct.php</file>
		<file>index.html</file>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="coreapp" type="list" default="1" label="PLG_QUICK2CARTPRODUCT_CORE_APPLICATION" description="PLG_QUICK2CARTPRODUCT_CORE_APPLICATION_DESC">
					<option value="0">PLG_QUICK2CARTPRODUCT_NO</option>
					<option value="1">PLG_QUICK2CARTPRODUCT_YES</option>
				</field>
				<field name="position" type="list" default="sidebar-top" label="PLG_QUICK2CARTPRODUCT_AVAILABLE_POSITION" description="PLG_QUICK2CARTPRODUCT_AVAILABLE_POSITION_DESC">
					<option value="content">Content</option>
					<option value="sidebar-top">Sidebar Top</option>
					<option value="sidebar-bottom">Sidebar Bottom</option>
				</field>
				<field name="no_of_prod" type="text" default="2" label="PLG_QUICK2CARTPRODUCT_NO_OF_PROD" description="PLG_QUICK2CARTPRODUCT_NO_OF_PROD_DESC"/>
				<field name="pin_width" type="text" default="120" label="PLG_QUICK2CARTPRODUCT_PIN_WIDTH" description="PLG_QUICK2CARTPRODUCT_PIN_WIDTH_DESC" />
				<field name="pin_padding" type="text" default="3" label="PLG_QUICK2CARTPRODUCT_PIN_PADDING" description="PLG_QUICK2CARTPRODUCT_PIN_PADDING_DESC" />
				<field name="cache" type="list" default="0" label="PLG_QUICK2CARTPRODUCT_CACHING_LBL" description="PLG_QUICK2CARTPRODUCT_CACHING_DESC">
					<option value="0">PLG_QUICK2CARTPRODUCT_NO</option>
					<option value="1">PLG_QUICK2CARTPRODUCT_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
