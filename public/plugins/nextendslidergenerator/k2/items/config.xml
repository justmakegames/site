<root>
    <params name="k2items" label="Filter_by">
        <param name="k2itemssourcecategory" label="Source_category" type="k2categories" default="0" multiple="1" size="10" />
        <param name="k2itemssourceuserid" label="User_id" type="text" default=""/>
        <param name="k2itemssourcepublished" label="Published" type="onoff" default="1"/>
        <param name="k2itemssourcefeatured" label="Featured" type="onoff" default="0"/>
        <param name="k2itemssourcelanguage" label="Language_filter" type="text" default="*"/>
    </params>
    <params name="order" label="Order_by">
        <param name="k2itemsorder1" type="mixed" label="Order_1" default="con.title|*|asc">
            <param type="list" label="Field">
                <option value="">None</option>
                <option value="con.title">Title</option>
                <option value="cat_title">Category title</option>
                <option value="created_by_alias">User name</option>
                <option value="con.featured">Featured</option>
                <option value="con.ordering">Ordering</option>
                <option value="con.hits">Hits</option>
                <option value="con.created">Creation time</option>
                <option value="con.modified">Modification time</option>
            </param>
            <param type="radio" label="order">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
            </param>
        </param>
        <param name="k2itemsorder2" type="mixed" label="Order_2" default="|*|asc">
            <param type="list" label="Field">
                <option value="">None</option>
                <option value="con.title">Title</option>
                <option value="cat_title">Category title</option>
                <option value="created_by_alias">User name</option>
                <option value="con.featured">Featured</option>
                <option value="con.ordering">Ordering</option>
                <option value="con.hits">Hits</option>
                <option value="con.created">Creation time</option>
                <option value="con.modified">Modification time</option>
            </param>
            <param type="radio" label="order">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
            </param>
        </param>
    </params>
</root>