<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client ="site" method="upgrade">
	<name>Quick2Cart - filters</name>
	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-13 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>19 Nov 2015</creationDate>
	<version>2.5</version>
	<description>Module to show category filters</description>
	<languages folder="lang">
		<language tag="en-GB">en-GB/en-GB.mod_q2cfilter.ini</language>
	</languages>
	<files>
		<filename module="mod_q2cfilters">mod_q2cfilters.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_SUFIX_DES" />
			</fieldset>
		</fields>
	</config>
</extension>
